<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".PhoneVerificationActivity2">


    <ImageView
        android:id="@+id/phn_ver_upper_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"

        android:src="@drawable/upper_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/phn_ver_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="15dp"
        android:src="@drawable/back_button_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/phn_ver_header_textview"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="-16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Phone Verification"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/phn_ver_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/phn_ver_back_button"
        app:layout_constraintTop_toTopOf="@+id/phn_ver_back_button" />

    <TextView
        android:id="@+id/phn_ver_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/label_verify_otp"
        android:textColor="@color/textColorDark"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver_upper_back" />

    <EditText

        android:id="@+id/phn_ver_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:background="@drawable/edit_text_dark"
        android:fontFamily="@font/raleway_bold"
        android:hint="******"
        android:maxLength="6"
        android:inputType="numberDecimal"
        android:minHeight="40dp"
        android:padding="15dp"
        android:textColor="@color/textColorDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/phn_ver_otp_button"
        app:layout_constraintStart_toStartOf="@+id/phn_ver_otp_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button

        android:id="@+id/phn_ver_otp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style_colored"
        android:fontFamily="@font/montserrat_bold"
        android:maxWidth="350dp"
        android:minWidth="320dp"
        android:text="Verify OTP"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/phn_ver_otp_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="OTP"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver_upper_back" />


    <EditText
        android:id="@+id/phn_ver_otp_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_dark"
        android:fontFamily="@font/raleway_bold"
        android:minHeight="40dp"

        android:padding="15dp"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phn_ver_otp_textview"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver_otp_textview" />

    <Button
        android:id="@+id/phn_ver_verify_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_style_colored"
        android:fontFamily="@font/montserrat_bold"
        android:maxWidth="350dp"
        android:minWidth="320dp"
        android:text="verify"
        android:textColor="#ffffff"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/phn_ver_otp_edittext"
        app:layout_constraintStart_toStartOf="@+id/phn_ver_otp_edittext"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver_otp_edittext" />


</androidx.constraintlayout.widget.ConstraintLayout>